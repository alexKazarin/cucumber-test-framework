<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="[%t] %level %c:%L - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger level="OFF" name="io.qameta.allure.AllureLifecycle">
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>
</Configuration>